function gramophone(nameOfBand, nameOfAlbum, nameOfSong) {

    let songDuration = Number((nameOfBand.length * nameOfAlbum.length) * nameOfSong.length / 2);

    let timesRotated = Math.ceil(songDuration / 2.5);

    console.log(`The plate was rotated ${timesRotated} times.`)

}
gramophone('Black Sabbath', 'Paranoid', 'War Pigs');
console.log(`\n --- \n`);
gramophone('Rammstein', 'Sehnsucht', 'Engel');
