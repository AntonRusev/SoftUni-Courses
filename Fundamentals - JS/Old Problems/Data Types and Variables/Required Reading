function requiredReading(numberOfPages, pagesPerHour, numberOfDays) {

    let totalTime = numberOfPages / pagesPerHour;

    let daysNeeded = totalTime / numberOfDays;

    console.log(daysNeeded)

}
requiredReading(212,
    20 ,
    2 );
console.log(`\n --- \n`);
requiredReading(432,
    15 ,
    4 );
