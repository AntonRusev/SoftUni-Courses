function convertToJSON(name, lastName, hairColor) {

    let person = {
        name,
        lastName,
        hairColor
    };
    let result = JSON.stringify(person);
    console.log(result)
}
convertToJSON('George', 'Jones', 'Brown');
console.log(`\n --- \n`);
convertToJSON('Peter', 'Smith', 'Blond');
