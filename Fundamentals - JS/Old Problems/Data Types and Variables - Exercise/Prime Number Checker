function primeNumberChecker(number) {
   
    let prime = 'true';
    if (number == 2) {

    } else if (number > 1) {
        for (let i = 2; i < number; i++) {
            if (number % i == 0) {
                prime = 'false'
                break;
            }

        }

    }
    console.log(prime)

}
primeNumberChecker(7);
console.log(`\n --- \n`);
primeNumberChecker(8);
console.log(`\n --- \n`);
primeNumberChecker(81)
