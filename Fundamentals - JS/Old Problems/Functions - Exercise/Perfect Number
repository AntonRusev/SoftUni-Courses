function perfectNumber(num) {
    let result = 0;
    for (let i = 1; i < num; i++) {
        if (num % i === 0) {
            result += i;
        }
    }
    if (result === num) {
        console.log('We have a perfect number!')
    } else {
        console.log("It's not so perfect.")
    }

}
perfectNumber(6);
console.log(`\n --- \n`);
perfectNumber(28);
console.log(`\n --- \n`);
perfectNumber(1236498);
