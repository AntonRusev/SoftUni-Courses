function triangleOfNumbers(num) {

    let i = 1;
    while (i <= num) {
        let row = '';
        let y = 1;
        while (y <= i) {
            row += i + ' ';
            y++
        }
        console.log(row)

        i++
    } 
}
triangleOfNumbers(3);
console.log(`\n --- \n`);
triangleOfNumbers(5);
console.log(`\n --- \n`);
triangleOfNumbers(6);
